package selfProgramming;

public class Trapezium {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        int a=12;
        int b=15;
        int h=3;
        double area;
        
        area=(0.5)*(h*(a+b));
        
        System.out.println("The area of trapezium is A= 1/2 *h*(a+b)");
        System.out.println("= "+ area);

        
	}

}
